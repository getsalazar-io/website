---
import Step from "./Step.astro";
import { t } from "i18next";

const cardSolution = [
  {
    title: "section.features.card.card-1.title",
    icon: "pi-link",
    description: "section.features.card.card-1.description",
    subtitle: "section.features.card.card-1.subtitle",
  },
  {
    title: "section.features.card.card-2.title",
    icon: "pi-sitemap",
    description: "section.features.card.card-2.description",
    subtitle: "section.features.card.card-2.subtitle",
  },
  {
    title: "section.features.card.card-3.title",
    icon: "pi-eye",
    description: "section.features.card.card-3.description",
    subtitle: "section.features.card.card-3.subtitle",
  },
];
---

<div class="wrapper-section-features">
  <div class="wrapper">
    <div class="section-features-content">
      <h2>{t("section.features.header")}</h2>
    </div>
    <div class="step-wrapper">
      {
        cardSolution.map((cardItem, index) => (
          <Step
            step={index + 1}
            title={t(cardItem.title)}
            icon={cardItem.icon}
            description={t(cardItem.description)}
            subtitle={t(cardItem.subtitle)}
            showArrow={index < cardSolution.length - 1}
          />
        ))
      }
    </div>
  </div>
</div>

<style>
  .wrapper-section-features {
    padding-block: 40px;
    justify-items: center;
  }

  .wrapper {
    max-width: 1280px;
  }

  .section-features-content {
    display: flex;
    flex-flow: column;
    gap: 12px;
    margin-bottom: 40px;
    text-align: center;
  }

  h4 {
    color: rgb(var(--highlight));
  }

  .wrapper-section-features .step-wrapper {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    width: 100%;
    margin-bottom: 40px;
    align-items: start;
  }

  @media screen and (max-width: 1188px) {
    .wrapper-section-features .step-wrapper {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }

  @media screen and (max-width: 768px) {
    .wrapper-section-features {
      padding-block: 24px;
    }

    .section-features-content {
      margin-bottom: 24px;
    }

    .wrapper-section-features .step-wrapper {
      gap: 24px;
      margin-bottom: 24px;
    }
  }
</style>
