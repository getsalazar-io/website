---
interface Item {
  title: string;
  description: string;
  image: string;
}

interface Props {
  items: Item[];
  autoRotateSeconds?: number;
}

const { items, autoRotateSeconds = 5 } = Astro.props;
---

<div class="feature-showcase" data-items={JSON.stringify(items)}>
  <div class="image-container">
    <img
      id="feature-image"
      src={items[0].image}
      alt={items[0].title}
      class="feature-image"
    />
  </div>

  <div class="items-list">
    {
      items.map((item, index) => (
        <div
          class={`item-card ${index === 0 ? "active" : ""}`}
          data-index={index}
        >
          <div class="item-content">
            <div class="item-header">
              <span class="item-order">0{index + 1}</span>
              <span class="item-title">{item.title}</span>
            </div>
            <div class="item-expandable">
              <p class="item-description">{item.description}</p>
              <div class="progress-bar">
                <div class="progress-fill" />
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .feature-showcase {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    padding: 2rem 60px;
    max-width: 1200px;
    margin: 0 auto;
    align-items: start;
  }

  .image-container {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    padding: 2rem;
    height: 100%;
    position: sticky;
    top: 0;
  }

  .feature-image {
    width: 100%;
    height: 350px;
    max-width: 100%;
    object-fit: contain;
    border-radius: 8px;
    transition: opacity 0.3s ease;
  }

  .items-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .item-card {
    position: relative;
    background: #253c4b4d;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    overflow: hidden;
    outline: 0.5px solid transparent;
    outline-offset: -0.5px;
  }

  .item-content {
    padding: 20px;
  }

  .item-header {
    display: flex;
    gap: 14px;
  }

  .item-card.active {
    outline-color: #3494ce;
  }

  .item-title {
    font-size: 24px;
    font-weight: 500;
    color: #62baf3;
    margin: 0;
  }

  .item-order {
    color: #ffffff;
    font-size: 24px;
    margin-top: 2px;
  }

  .item-expandable {
    display: none;
  }

  .item-card.active .item-expandable {
    display: block;
  }

  .item-description {
    font-weight: 400;
    font-size: 16px;
    color: #ffffff;
    margin: 14px 0 0 0;
  }

  .progress-bar {
    width: 100%;
    height: 3px;
    background: transparent;
    border-radius: 2px;
    margin-top: 14px;
  }

  .progress-fill {
    height: 100%;
    width: 0%;
    background: #62baf3;
    transition: width 0.1s linear;
  }

  @media (max-width: 768px) {
    .feature-showcase {
      grid-template-columns: 1fr;
      padding: 0 0 2rem 0;
      gap: 1rem;
    }

    .image-container {
      order: -1;
      position: relative;
      height: auto;
    }

    .feature-image {
      width: auto;
      height: 200px;
    }

    .item-title {
      font-size: 20px;
    }

    .item-order {
      font-size: 24px;
    }

    .item-description {
      font-size: 16px;
    }
  }
</style>

<script define:vars={{ autoRotateSeconds }} async>
  const showcase = document.querySelector(".feature-showcase");
  const items = document.querySelectorAll(".item-card");
  const image = document.getElementById("feature-image");
  const imageContainer = document.querySelector(".image-container");
  const itemsList = document.querySelector(".items-list");
  let currentIndex = 0;
  let progressInterval;
  let elapsedTime = 0;
  let isPaused = false;
  let lastUpdateTime;

  const itemsData = JSON.parse(showcase.getAttribute("data-items") || "[]");

  const syncHeight = () => {
    if (itemsList && imageContainer) {
      imageContainer.style.height = `auto`;
    }
  };

  const updateProgress = () => {
    if (isPaused) return;

    const now = Date.now();
    const delta = (now - lastUpdateTime) / 1000;
    lastUpdateTime = now;

    elapsedTime += delta;

    const activeCard = items[currentIndex];
    const progressFill = activeCard.querySelector(".progress-fill");
    const progress = Math.min((elapsedTime / autoRotateSeconds) * 100, 100);

    if (progressFill) {
      progressFill.style.width = `${progress}%`;
    }

    if (elapsedTime >= autoRotateSeconds) {
      nextItem();
    }
  };

  const resetProgress = () => {
    items.forEach((item) => {
      const progressFill = item.querySelector(".progress-fill");
      if (progressFill) {
        progressFill.style.width = "0%";
      }
    });
    elapsedTime = 0;
  };

  const setActiveItem = (index) => {
    currentIndex = index;

    items.forEach((item, idx) => {
      item.classList.toggle("active", idx === index);
    });

    resetProgress();
    lastUpdateTime = Date.now();

    setTimeout(syncHeight, 50);

    const currentItem = itemsData[index];
    if (currentItem?.image) {
      image.style.opacity = "0";

      setTimeout(() => {
        image.src = currentItem.image;
        image.alt = currentItem.title;
        image.style.opacity = "1";
      }, 150);
    }
  };

  const nextItem = () => {
    const next = (currentIndex + 1) % items.length;
    setActiveItem(next);
  };

  const startProgressTracking = () => {
    isPaused = false;
    lastUpdateTime = Date.now();

    if (progressInterval) {
      clearInterval(progressInterval);
    }

    progressInterval = setInterval(updateProgress, 50);
  };

  const pauseProgressTracking = () => {
    isPaused = true;
    if (progressInterval) {
      clearInterval(progressInterval);
    }
  };

  const resumeProgressTracking = () => {
    isPaused = false;
    lastUpdateTime = Date.now();

    if (progressInterval) {
      clearInterval(progressInterval);
    }

    progressInterval = setInterval(updateProgress, 50);
  };

  items.forEach((item, index) => {
    item.addEventListener("click", () => {
      setActiveItem(index);
      startProgressTracking();
    });

    item.addEventListener("mouseenter", () => {
      if (item.classList.contains("active")) {
        pauseProgressTracking();
      }
    });

    item.addEventListener("mouseleave", () => {
      if (item.classList.contains("active")) {
        resumeProgressTracking();
      }
    });
  });

  syncHeight();
  window.addEventListener("resize", syncHeight);

  startProgressTracking();

  if (window.ResizeObserver) {
    const resizeObserver = new ResizeObserver(() => {
      syncHeight();
    });
    if (itemsList) {
      resizeObserver.observe(itemsList);
    }
  }
</script>
