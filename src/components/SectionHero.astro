---
import { t } from "i18next";
import Modal from "./Modal.astro";
---

<div class="section-hero">
  <div class="wrapper">
    <div class="hero-content">
      <h1>{t("section.hero.header")}</h1>
      <h2>{t("section.hero.subheader")}</h2>
      <p>{t("section.hero.paragraph")}</p>
    </div>
    <div class="hero-image-wrapper">
      <div class="hero-parallax" id="heroParallax">
        <button class="hero-button" id="openModal">
          <span class="pi pi-play"></span>
        </button>
        <img
          src="/images/hero/hero_backSX.webp"
          alt={t("section.hero.alt-text")}
          class="hero-back-left"
        />
        <img
          src="/images/hero/hero_MidSX.webp"
          alt={t("section.hero.alt-text")}
          class="hero-mid-left"
        />
        <img
          src="/images/hero/hero_Center.webp"
          alt={t("section.hero.alt-text")}
          class="hero-center"
        />
        <img
          src="/images/hero/hero_MidDX.webp"
          alt={t("section.hero.alt-text")}
          class="hero-mid-right"
        />
        <img
          src="/images/hero/hero_backDX.webp"
          alt={t("section.hero.alt-text")}
          class="hero-back-right"
        />
      </div>
    </div>
  </div>
  <img
    src="/images/bg_planet_Hero.png"
    class="planet-small"
    id="planetSmall"
    alt={t("images.planetSmall")}
  />
  <img
    src="/images/bg_planet_Hero.png"
    class="planet-big"
    id="planetBig"
    alt={t("images.planetBig")}
  />
</div>

<Modal videoUrl="/videos/Salazar2026_speedup.mp4" />

<style>
  .section-hero {
    min-height: 135vh;
    display: flex;
    align-items: start;
    justify-content: center;
    position: relative;
    margin-top: 180px;
  }
  .wrapper {
    display: flex;
    flex-direction: column;
    gap: 40px;
    width: 100%;
    position: relative;
    z-index: 2;
  }
  .hero-content {
    display: flex;
    flex-flow: column;
    gap: 16px;
    text-align: center;
  }
  h2 {
    font-size: 28px;
    line-height: 31px;
  }
  p > span {
    font-weight: 700;
  }
  p {
    white-space: break-spaces;
  }
  .hero-image-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    min-height: 400px;
  }
  .hero-button {
    width: 80px;
    height: 80px;
    background: radial-gradient(
      114.44% 51.25% at 50% 14.15%,
      rgba(76, 167, 223, 0.86) 0%,
      rgba(51, 106, 139, 0.86) 0%,
      rgba(19, 26, 30, 0.86) 100%
    );
    box-shadow:
      0px 4px 20px -5px #7bc5f5,
      0px 0px 0px 0.5px #62baf3;
    border: none;
    border-radius: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    z-index: 10;
    position: absolute;
    transition: transform 0.3s ease;
  }
  .hero-button:hover {
    transform: scale(1.1);
  }
  .hero-button span {
    color: white;
    font-size: 50px;
    padding-left: 10px;
  }
  .hero-parallax {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 314px;
    max-width: 1280px;
    will-change: transform;
  }
  .hero-parallax img {
    position: absolute;
  }

  .hero-center {
    height: 314px;
    z-index: 5;
    left: 50%;
    transform: translateX(-50%);
  }

  .hero-mid-left {
    height: 227px;
    z-index: 4;
    left: 25%;
    transform: translateX(-50%);
  }

  .hero-mid-right {
    height: 227px;
    z-index: 4;
    left: 70%;
    transform: translateX(-50%);
  }

  .hero-back-left {
    height: 135px;
    z-index: 3;
    left: 0;
  }

  .hero-back-right {
    height: 135px;
    z-index: 3;
    right: 0;
  }

  .planet-small {
    position: absolute;
    height: 111px;
    left: 75%;
    bottom: 75%;
    will-change: transform;
    z-index: 1;
  }

  .planet-big {
    position: absolute;
    height: 500px;
    bottom: 35%;
    left: 0;
    will-change: transform;
    z-index: 0;
  }

  @keyframes bounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(30px);
    }
  }

  @media (max-width: 768px) {
    .section-hero {
      margin-top: 120px;
      min-height: 150vh;
    }

    .hero-image-wrapper {
      padding: 0 20px;
      overflow: visible;
    }

    .hero-parallax {
      height: 250px;
      overflow: visible;
    }

    .hero-parallax img {
      object-fit: contain;
      width: auto;
    }

    .hero-center {
      height: 250px;
      left: 50%;
      transform: translateX(-50%);
    }

    .hero-mid-left {
      height: 180px;
      left: 15%;
      transform: translateX(-30%);
    }

    .hero-mid-right {
      height: 180px;
      left: 85%;
      transform: translateX(-75%);
    }

    .hero-back-left {
      height: 110px;
      left: 0;
      transform: translateX(0);
    }

    .hero-back-right {
      height: 110px;
      right: 0;
      transform: translateX(0);
    }

    .planet-big {
      height: 300px;
      bottom: 20%;
    }

    .planet-small {
      height: 80px;
      left: 70%;
      top: 10%;
    }

    h2 {
      font-size: 24px;
      line-height: 28px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const openBtn = document.getElementById("openModal");
    const scrollDown = document.getElementById("scrollDown");
    const heroParallax = document.getElementById("heroParallax");
    const planetSmall = document.getElementById("planetSmall");
    const planetBig = document.getElementById("planetBig");
    const heroSection = document.querySelector(".section-hero") as HTMLElement;

    const PARALLAX_SPEED_HERO = 0.5;
    const PARALLAX_SPEED_PLANET_BIG = 0.3;
    const PARALLAX_SPEED_PLANET_SMALL = 0.4;

    let currentScrollY = 0;

    openBtn?.addEventListener("click", () => {
      if ((window as any).openVideoModal) {
        (window as any).openVideoModal();
      }
    });

    const handleScroll = () => {
      currentScrollY = window.scrollY;
      const scrollThreshold = window.innerHeight * 0.5;

      if (currentScrollY > scrollThreshold) {
        scrollDown?.classList.add("hidden");
      } else {
        scrollDown?.classList.remove("hidden");
      }

      if (heroSection) {
        const heroRect = heroSection.getBoundingClientRect();
        const heroBottom = heroRect.bottom;

        if (heroBottom > 0) {
          const maxTranslate = heroRect.height * 0.3;

          if (heroParallax) {
            const translateY = Math.min(
              currentScrollY * PARALLAX_SPEED_HERO,
              maxTranslate
            );
            heroParallax.style.transform = `translateY(${translateY}px)`;
          }

          if (planetBig) {
            const translateY = Math.min(
              currentScrollY * PARALLAX_SPEED_PLANET_BIG,
              maxTranslate
            );
            planetBig.style.transform = `translateY(${translateY}px)`;
          }

          if (planetSmall) {
            const translateY = Math.min(
              currentScrollY * PARALLAX_SPEED_PLANET_SMALL,
              maxTranslate
            );
            planetSmall.style.transform = `translateY(${translateY}px)`;
          }
        }
      }
    };

    let ticking = false;
    const optimizedScroll = () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          handleScroll();
          ticking = false;
        });
        ticking = true;
      }
    };

    window.addEventListener("scroll", optimizedScroll);
  });
</script>
