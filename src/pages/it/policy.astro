---
import { Trans } from "astro-i18next/components";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import Layout from "../../layouts/default.astro";
import { t } from "i18next";
import { changeLanguage } from "i18next";

changeLanguage('it');
---

<Layout>
  <Header>
    <Fragment slot="button">
      <a
        href="/#form-container"
        id="link-button-demo"
        class="link-btn">{t("button.demo")}</a
      >
    </Fragment>
  </Header>
  <div class="wrapper-policy-presentation">
    <div class="wrapper">
      <div class="policy-content">
        <div class="policy-content-header">
          <div>
            <a
              class="link-btn"
              id="link-btn-back"
              href="/"
              aria-label={t("policy:policy-back")}
            >
              <span><i class="pi pi-arrow-left" aria-hidden="true"></i></span>
            </a><span>{t("policy:policy-back")}</span>
          </div>
          <h1>{t("policy:policy-header")}</h1>
          <h3>{t("policy:policy-subheader")}</h3>
        </div>
        <div class="policy-general-infos">
          <div>
            <h4>{t("policy:policy-chap1-header")}</h4>
            <p>{t("policy:policy-chap1-text")}</p>
            <h4>{t("policy:policy-chap2-header")}</h4>
            <p>
              <Trans i18nKey="policy:policy-chap2-text">
                <a></a><a id="contact-email" href="mailto:email: dpo@sorint.com"
                ></a>
              </Trans>
            </p>
          </div>
          <div>
            <h4>{t("policy:policy-chap3-header")}</h4>
            <div class="two-columns">
              <div>
                <p>{t("policy:policy-chap3-text-left")}</p>
              </div>
              <div>
                <p>{t("policy:policy-chap3-text-right")}</p>
              </div>
            </div>
          </div>
        </div>
        <div class="policy-processing-data">
          <h3 id="processing-title">{t("policy:policy-paragraph2-header")}</h3>
          <div class="processing-content">
            <div>
              <h4>{t("policy:policy-chap4-header")}</h4>
              <p>{t("policy:policy-chap4-text")}</p>
            </div>
            <div class="section-legal">
              <h4>{t("policy:policy-chap5-header")}</h4>
              <div class="two-columns">
                <div>
                  <p>{t("policy:policy-chap5-text-left")}</p>
                  <ul>
                    <li>{t("policy:policy-chap5-text-list1")}</li>
                    <li>{t("policy:policy-chap5-text-list2")}</li>
                    <li>{t("policy:policy-chap5-text-list3")}</li>
                    <li>{t("policy:policy-chap5-text-list4")}</li>
                    <li>{t("policy:policy-chap5-text-list5")}</li>
                  </ul>
                </div>
                <div>
                  <p>{t("policy:policy-chap5-text-right")}</p>
                </div>
              </div>
            </div>
            <div class="section-place">
              <h4>{t("policy:policy-chap6-header")}</h4>
              <div class="two-columns">
                <div>
                  <p>{t("policy:policy-chap6-text-left")}</p>
                </div>
                <div>
                  <p>{t("policy:policy-chap6-text-right")}</p>
                </div>
              </div>
            </div>
            <div class="section-retention">
              <h4>{t("policy:policy-chap7-header")}</h4>
              <div class="two-columns">
                <div>
                  <p>{t("policy:policy-chap7-text-left")}</p>
                  <ul>
                    <li>{t("policy:policy-chap7-text-list1")}</li>
                    <li>{t("policy:policy-chap7-text-list2")}</li>
                  </ul>
                  <p>{t("policy:policy-chap7-text-left2")}</p>
                </div>
                <div>
                  <p>{t("policy:policy-chap7-text-right")}</p>
                </div>
              </div>
            </div>
            <div class="section-purposes">
              <h4>{t("policy:policy-chap8-header")}</h4>
              <div class="two-columns">
                <div>
                  <p>{t("policy:policy-chap8-text-left")}</p>
                </div>
                <div>
                  <p>{t("policy:policy-chap8-text-right")}</p>
                </div>
              </div>
            </div>
            <div class="section-detailed-infos">
              <h4>{t("policy:policy-chap9-header")}</h4>
              <p>{t("policy:policy-chap9-text")}</p>
              <ul>
                <li>{t("policy:policy-chap9-text-list1")}</li>
                <li>{t("policy:policy-chap9-text-list2")}</li>
              </ul>
            </div>
            <div class="section-rights">
              <h4>{t("policy:policy-chap10-header")}</h4>
              <p id="section-rights-content">
                {t("policy:policy-chap10-text-left")}
              </p>
              <div class="two-columns">
                <div>
                  <ul>
                    <li>{t("policy:policy-chap10-text-list1")}</li>
                    <li>{t("policy:policy-chap10-text-list2")}</li>
                    <li>{t("policy:policy-chap10-text-list3")}</li>
                    <li>{t("policy:policy-chap10-text-list4")}</li>
                  </ul>
                </div>
                <div>
                  <ul>
                    <li>{t("policy:policy-chap10-text-list5")}</li>
                    <li>{t("policy:policy-chap10-text-list6")}</li>
                    <li>{t("policy:policy-chap10-text-list7")}</li>
                    <li>{t("policy:policy-chap10-text-list8")}</li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="section-details">
              <h4>{t("policy:policy-chap11-header")}</h4>
              <div class="two-columns">
                <div>
                  <p>{t("policy:policy-chap11-text-left")}</p>
                </div>
                <div>
                  <p>{t("policy:policy-chap11-text-right")}</p>
                </div>
              </div>
            </div>
            <div>
              <h4>{t("policy:policy-chap12-header")}</h4>
              <p>{t("policy:policy-chap12-text")}</p>
            </div>
          </div>
        </div>
        <div class="policy-additional-infos">
          <h3>{t("policy:policy-paragraph3-header")}</h3>
          <div>
            <h4>{t("policy:policy-chap13-header")}</h4>
            <p>{t("policy:policy-chap13-text")}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <Footer />
</Layout>

<style>
  body {
    width: 100%;
    margin: auto;
    font-weight: 400;
    color: white;
  }
  p {
    white-space: pre-line;
  }
  li {
    display: flex;
  }
  li::before {
    display: inline;
    content: "•";
    margin-right: 10px;
  }
  h4 {
    font-weight: 600;
  }
  .link-btn {
    appearance: none;
    height: 40px;
    display: inline-flex;
    border-radius: 6px;
    padding-block: 10px;
    padding-inline: 16px;
    font-size: 14px;
    font-weight: 400;
    margin-right: 10px;
    transition: all 0.3s ease-out;
  }
  #link-btn-back {
    border: 1px solid rgb(var(--highlight));
    color: rgb(var(--highlight));
  }

  .link-btn:hover {
    cursor: pointer;
    background-color: #75c9ff;
    scale: 1.05;
    box-shadow: 0 0 40px 9px #2a4556; /* inner white */
  }
  #link-btn-back:hover {
    color: white;
  }
  #link-button-demo {
    background-color: rgb(var(--highlight));
    color: #1d1e27;
  }

  .policy-content {
    display: flex;
    flex-flow: column;
    gap: 24px;
  }
  .policy-content-header {
    padding-block: 40px;
    display: flex;
    flex-flow: column;
    gap: 18px;
  }
  .policy-general-infos {
    padding-block: 40px;
    display: flex;
    flex-flow: column;
    gap: 80px;
  }
  .policy-general-infos > * {
    display: flex;
    flex-flow: column;
    gap: 20px;
  }
  #contact-email {
    color: rgb(var(--highlight));
  }
  #processing-title {
    margin-bottom: 40px;
  }
  .processing-content {
    padding-block: 40px;
    display: flex;
    flex-flow: column;
    gap: 40px;
  }
  .processing-content > * > h4,
  #section-rights-content {
    margin-bottom: 20px;
  }
  .policy-additional-infos > h3 {
    margin-bottom: 40px;
  }
  .policy-additional-infos div {
    padding-block: 40px;
  }
  .policy-additional-infos div > h4 {
    margin-bottom: 20px;
  }

  /* columns  */
  .two-columns {
    display: flex;
    flex-flow: column;
    gap: 20px;
  }
  .two-columns > * {
    margin-left: 20px;
  }

  @media screen and (min-width: 768px) {
    .two-columns {
      flex-flow: row;
      gap: 80px;
    }

    .two-columns > * {
      flex-basis: 50%;
      margin-left: 0;
    }
  }

  .wrapper-policy-presentation {
    background: linear-gradient(
      180deg,
      rgba(98, 186, 243, 0) 5%,
      rgba(98, 186, 243, 0.08) 14%,
      rgba(98, 186, 243, 0) 25%,
      rgba(98, 186, 243, 0) 35%,
      rgba(98, 186, 243, 0.1) 50%,
      rgba(98, 186, 243, 0) 85%,
      rgba(98, 186, 243, 0) 88%,
      rgba(98, 186, 243, 0.08) 93.3%,
      rgba(98, 186, 243, 0) 100%
    );
  }
</style>
